{
  "name": "Remote Backup v2",
  "version": "0.1.0",
  "slug": "remote_backup2",
  "description": "Automatically create Hass.io snapshots to remote server using `SCP` or `SMB` protocol",
  "url": "https://github.com/krzkowalczyk/hassio-remote-backup2",
  "startup": "application",
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "backup",
  "map": ["backup:rw"],
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "options": {
    "smb": {
      "host": "",
      "user": "",
      "password": ""
    },
    "ssh": {
      "host": "",
      "port": 22,
      "user": "",
      "key": []
    },
    "remote_directory": "",
    "snapshot_password": "",
    "keep_local_backup": "",
    "schedule": "1 1 * * *"
  },
  "schema": {
    "smb": {
      "host": "str",
      "user": "str",
      "password": "str"
    },
    "ssh": {
      "host": "str",
      "port": "int",
      "user": "str",
      "key": ["str"]
    },
    "remote_directory": "str",
    "snapshot_password": "str",
    "keep_local_backup": "match(^(all|[+]?\\d*)$)",
    "schedule": "str"
  }
}
